{
  "name": "@cawpea/coderef",
  "version": "0.1.0",
  "description": "Validate and fix code references in markdown documentation",
  "keywords": [
    "markdown",
    "documentation",
    "code-reference",
    "validation",
    "docs",
    "code-snippets",
    "ast",
    "typescript"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "coderef": "./bin/coderef.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli/validate.ts src/cli/fix.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@typescript-eslint/typescript-estree": "^8.50.1",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^30.2.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.4.5",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cawpea/coderef.git"
  },
  "bugs": {
    "url": "https://github.com/cawpea/coderef/issues"
  },
  "homepage": "https://github.com/cawpea/coderef#readme",
  "author": "cawpea",
  "license": "MIT"
}
